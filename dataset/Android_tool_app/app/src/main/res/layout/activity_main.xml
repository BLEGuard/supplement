<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/relativeline">
	<TableLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/firstline"
	    android:orientation="vertical"
	    android:layout_alignParentTop="true"
        android:focusableInTouchMode="true"
		>
        <TableRow>	       
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/nu_tv"
		        android:text="number"/>
		    <EditText
		        android:id="@+id/nu_et"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="采集设备数(填最大)"
		        android:inputType="number"/>
		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/change_num"
		        android:text="Done"/>		    		 
	    </TableRow>
	    <TableRow>	       
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/loc_tv"
		        android:text="Location"/>
		    <EditText
		        android:id="@+id/loc_et"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="面对第几个蓝牙"
		        android:inputType="number"/>
		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/change_loc"
		        android:text="Done"/>		 
	    </TableRow>
	    <TableRow>
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/dx_tv"
		        android:text="DX"/>
		    <EditText
		        android:id="@+id/dx_et"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="输入当前设备dx(dm)" 
		        android:inputType="number"/>
		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/change_dx"
		        android:text="Done"/>
	    </TableRow>
	    <TableRow>
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/dy_tv"
		        android:text="DY"/>
		    <EditText
		        android:id="@+id/dy_et"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="输入当前设备dy(dm)" 
		        android:inputType="number"/>
		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/change_dy"
		        android:text="Done"/>
	    </TableRow>
	    <TableRow >
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/time_tv"
		        android:text="Delay_Time"/>
		    <EditText
		        android:id="@+id/time_et"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="输入延时时间间隔(ms)" 
		        android:inputType="number"/>
		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/change_time"
		        android:text="Done"/>
	    </TableRow>
	    <TableRow >
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/stoptime_tv"
		        android:text="CollectTime"/>
		    <EditText
		        android:id="@+id/stoptime_et"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="请输入要采集的次数" 
		        android:inputType="number"/>
		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/stop_time_bn"
		        android:text="Done"/>
	    </TableRow>
	     <TableRow >
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/cyclingtime_tv"
		        android:text="CyclingTime"/>
		    <EditText
		        android:id="@+id/cyclingtime_et"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="请输入循环的次数" 
		        android:inputType="number"/>
		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/cycling_time_bn"
		        android:text="Done"/>
	    </TableRow>
	    <TableRow>
	        <Button
		        android:id="@+id/set_last_set"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="SetLast" />
	        <Button
		        android:id="@+id/sqlite_bn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Sqlite" />
        </TableRow>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:id="@+id/secondline"> 
		    <ScrollView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">   <!-- 匹配父类，就是上一层布局 -->
		        <LinearLayout
	            android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
				    <TextView
				        android:id="@+id/textView1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" 
				        android:scrollbars="vertical" 
				        android:singleLine="false"
				        android:maxLines="7"  /><!-- 垂直滚动条，实现多行，最多10行 -->
				    <TextView
				        android:id="@+id/count_tv"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="Waitting for start" 
				        android:scrollbars="vertical" 
				        android:singleLine="false"
				        android:maxLines="7"  /><!-- 垂直滚动条，实现多行，最多10行 -->
			    </LinearLayout>
		   </ScrollView>
		</LinearLayout>
 	</TableLayout>
 	<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:id="@+id/thirdline"
		    android:layout_below="@id/firstline"
		    android:layout_alignParentBottom="true">
		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/show_dev"
		        android:text="ShowDev"/>
		    <Button
		        android:id="@+id/start"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Start" />
		    <Button
		        android:id="@+id/stop"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Stop" />
		    <Button
		        android:id="@+id/draw"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="ShowDraw" />
	</LinearLayout>	 	
</RelativeLayout>
